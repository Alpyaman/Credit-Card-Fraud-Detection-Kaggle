# Environment variables for local development

# Model paths
MODEL_PATH=models/fraud_model.pkl
PREPROCESSOR_PATH=models/preprocessor.pkl

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Model configuration
MODEL_RELOAD_INTERVAL=3600  # Reload model every hour

# Monitoring
ENABLE_MONITORING=true
MONITORING_ENDPOINT=http://localhost:8501

# Cloud Configuration (uncomment as needed)
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=fraud-detection-models
# GCP_PROJECT_ID=your-project-id
# GCP_BUCKET=fraud-detection-models

# Database (if using for predictions logging)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fraud_detection
# DB_USER=postgres
# DB_PASSWORD=your-password

# Security (implement as needed)
# API_KEY=your-secret-api-key
# JWT_SECRET=your-jwt-secret
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Feature flags
ENABLE_BATCH_PREDICTION=true
MAX_BATCH_SIZE=1000

# Performance
WORKERS=4
WORKER_CONNECTIONS=1000
